{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es5", "es6"],
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {"*": ["node_modules/*"]}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
